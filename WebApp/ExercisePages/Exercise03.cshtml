@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "Exercise 03");
}

@section banner {
    <h1>@Page.Title</h1>
}

@{

}

<form id="album-form" class="form-signin" method="post">
    <div class="text-center mb-4">
        <h2 class="mb-3 font-weight-normal">Enter an Album</h2>
    </div>
    <ul>
        <li>Title is required</li>
        <li>Year is a range from 1950 to present</li>
        <li>Label is limited to 50 characters</li>
    </ul>

    <div class="form-label-group row">
        <input type="text" id="input-title" class="form-control" placeholder="Title" required autofocus>
        <label for="inputEmail">Title</label>
    </div>

    <div class="form-group row">        
        <label class="col-2 col-form-label">Artist</label>
        <select id="" class="form-control col-10">
            <option>Select an artist</option>            
        </select>
    </div>

    <div class="form-label-group row">
        <input type="number" id="input-year" class="form-control" placeholder="Year" required>
        <label for="inputEmail">Year</label>
    </div>

    <div class="form-label-group row">
        <input type="text" id="input-music-label" class="form-control" placeholder="Music Label" required>
        <label for="inputEmail">Music Label</label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">Add</button>
    <button class="btn btn-lg btn-secondary" type="submit">Clear</button>
</form>